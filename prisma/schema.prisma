generator client {

  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Group {
  id        String @id @default(uuid())

  name      String
  price     Int
  capacity  Int

  teacherId String
  roomId    String

  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  // Relations
  //teacher   TeacherProfile @relation(fields: [teacherId], references: [id])
  room      Room           @relation(fields: [roomId], references: [id])

  // enrollments Enrollment[]
}
model Room {
  id        String @id @default(uuid())

  name      String
  capacity  Int

  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  // Relations
  groups    Group[]
}