generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}
model User {
  id        String @id @default(uuid())
  password  String
  role      Role

  firstName String
  lastName  String
  phone     String?

  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  // Relations
  studentProfile StudentProfile?
  teacherProfile TeacherProfile?
  managerProfile ManagerProfile?
}


model TeacherProfile {
  id        String @id @default(uuid())
  userId    String @unique

  lessonPrice Int?
  percent     Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  groups Group[] 

  user User @relation(fields: [userId], references: [id])
}

model StudentProfile {
  id        String @id @default(uuid())
  userId    String @unique

  address   String
  idCard    String
  photoUrl  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model ManagerProfile {
  id        String @id @default(uuid())
  userId    String @unique

  // Business info (minimal)
  note      String?

  // Lifecycle
  isActive  Boolean @default(true)

  // Soft delete (DEACTIVATE)
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}


model Group {
  id        String @id @default(uuid())

  name      String
  price     Int
  capacity  Int

  teacherId String
  roomId    String

  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  // Relations
  teacher   TeacherProfile @relation(fields: [teacherId], references: [id])
  room      Room           @relation(fields: [roomId], references: [id])

  // enrollments Enrollment[]
}
model Room {
  id        String @id @default(uuid())

  name      String
  capacity  Int

  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  // Relations
  groups    Group[]
}


enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

model User {
  id String @id @default(cuid())
  phone String? @unique
  passwordHash String? 
  role Role
  status UserStatus  @default(ACTIVE)
  refreshToken RefreshToken[]
  mustChangePassword Boolean @default(false)
  tokenVersion Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}