generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
}



enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}

enum UserStatus {
  ACTIVE
  BLOCKED
}
enum Gender {
  MALE
  FEMALE
}
enum TeacherPaymentType {
  SALARY
  PERCENT
}
enum WeekPattern {
  ODD   // Dushanba, Chorshanba, Juma
  EVEN  // Seshanba, Payshanba, Shanba
}

model User {
  id String @id @default(cuid())
  phone String? @unique
  passwordHash String? 
  role Role
  status UserStatus  @default(ACTIVE)
  refreshToken RefreshToken[]
  mustChangePassword Boolean @default(false)
  tokenVersion Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teacherProfile TeacherProfile?
  studentProfile StudentProfile?
  managerProfile ManagerProfile?
  groupHistories GroupHistory[] @relation("GroupHistoryActor")
  deletedTeacherProfiles TeacherProfile[] @relation("TeacherProfileDeletedBy")
  deletedStudentProfiles StudentProfile[] @relation("StudentProfileDeletedBy")
  deletedManagerProfiles ManagerProfile[] @relation("ManagerProfileDeletedBy")

  @@index([role])
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model ManagerProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String
  gender    Gender?
  birthDate DateTime?
  photoUrl  String?

  salary    Int     // ðŸ”¥ YANGI

  note      String?
  isActive  Boolean @default(true)

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("ManagerProfileDeletedBy", fields: [deletedById], references: [id])
}


model StudentProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String
  address   String

  gender    Gender?
  birthDate DateTime?

  idCard    String?
  photoUrl  String?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("StudentProfileDeletedBy", fields: [deletedById], references: [id])

  @@index([userId])
}


model TeacherProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String

  gender    Gender?
  
  paymentType TeacherPaymentType

  monthlySalary Int?
  percent       Int?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assignments TeacherAssignment[]
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("TeacherProfileDeletedBy", fields: [deletedById], references: [id])

  @@index([userId])
}
model Room {
  id             String    @id @default(cuid())
  name           String
  capacity       Int
  isActive       Boolean   @default(true)
  deletedAt      DateTime?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  groups          Group[]
  @@index([deletedAt])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  RESTORE
}

model GroupHistory {
  id        String      @id @default(cuid())
  groupId   String
  actorId   String
  action    AuditAction
  oldData   Json?
  newData   Json?
  timestamp DateTime    @default(now())

  group     Group @relation(fields: [groupId], references: [id])
  
  // ðŸ”¥ Relation name beramiz
  actor     User  @relation("GroupHistoryActor", fields: [actorId], references: [id])

  @@index([groupId])
  @@index([actorId])
}


model Group {
  id           String   @id @default(cuid())
  name         String
  monthlyFee   Int
  capacity     Int
  weekPattern  String
  roomId       String

  startTime    Int
  endTime      Int

  createdAt    DateTime @default(now())
  createdById  String?

  updatedAt    DateTime @updatedAt
  updatedById  String?

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?
  isActive     Boolean  @default(true)
  teachers     TeacherAssignment[]
  room         Room     @relation(fields: [roomId], references: [id])
   histories    GroupHistory[]

  @@index([deletedAt])
}




model TeacherAssignment {
  id        String   @id @default(cuid())

  teacherId String
  groupId   String

  assignedAt DateTime @default(now())
  endedAt    DateTime?

  isActive Boolean @default(true)

  teacher TeacherProfile @relation(fields: [teacherId], references: [id])
  group   Group          @relation(fields: [groupId], references: [id])

  @@index([teacherId])
  @@index([groupId])

}
