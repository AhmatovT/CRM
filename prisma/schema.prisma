generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}
enum WeekPattern {
  ODD   // Dushanba, Chorshanba, Juma
  EVEN  // Seshanba, Payshanba, Shanba
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

enum Gender {
  MALE
  FEMALE
}

enum TeacherPaymentType {
  SALARY
  PERCENT
}
enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum EnrollmentStatus {
  ACTIVE
  DROPPED
  COMPLETED
}

enum AttendanceSource {
  TEACHER
  SYSTEM
}

enum AttendanceSessionStatus {
  OPEN
  LOCKED
}
model User {
  id                 String     @id @default(cuid())
  phone              String?    @unique
  passwordHash       String?
  role               Role
  status             UserStatus @default(ACTIVE)

  refreshToken       RefreshToken[]

  mustChangePassword Boolean @default(false)
  tokenVersion       Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teacherProfile TeacherProfile?
  studentProfile StudentProfile?
  managerProfile ManagerProfile?
  groupHistories GroupHistory[] @relation("GroupHistoryActor")
  deletedTeacherProfiles TeacherProfile[] @relation("TeacherProfileDeletedBy")
  deletedStudentProfiles StudentProfile[] @relation("StudentProfileDeletedBy")
  deletedManagerProfiles ManagerProfile[] @relation("ManagerProfileDeletedBy")
  deletedEnrollments     Enrollment[]


  // âœ… Attendance relations
  attendanceMarked            Attendance[]        @relation("AttendanceMarkedBy")
  attendanceSessionsLocked    AttendanceSession[] @relation("AttendanceSessionLockedBy")
  attendanceSessionsFinalized AttendanceSession[] @relation("AttendanceSessionFinalizedBy")

  @@index([role])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model ManagerProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String
  gender    Gender?
  birthDate DateTime?
  photoUrl  String?

  salary    Int     // ðŸ”¥ YANGI

  note      String?
  isActive  Boolean @default(true)

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("ManagerProfileDeletedBy", fields: [deletedById], references: [id])
}


model StudentProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String
  address   String

  gender    Gender?
  birthDate DateTime?

  idCard    String?
  photoUrl  String?
  enrollment Enrollment[]
  isActive Boolean @default(true)
  attendance Attendance[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("StudentProfileDeletedBy", fields: [deletedById], references: [id])

  @@index([userId])
}


model TeacherProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String

  gender    Gender?
  
  paymentType TeacherPaymentType

  monthlySalary Int?
  percent       Int?
  attendanceSession AttendanceSession[]
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assignments TeacherAssignment[]
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("TeacherProfileDeletedBy", fields: [deletedById], references: [id])

  @@index([userId])
}
model TeacherAssignment {
  id        String   @id @default(cuid())

  teacherId String
  groupId   String

  assignedAt DateTime @default(now())
  endedAt    DateTime?

  isActive Boolean @default(true)

  teacher TeacherProfile @relation(fields: [teacherId], references: [id])
  group   Group          @relation(fields: [groupId], references: [id])

  @@index([teacherId])
  @@index([groupId])

}
model Room {
  id             String    @id @default(cuid())
  name           String
  capacity       Int
  isActive       Boolean   @default(true)
  deletedAt      DateTime?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  ateendanceSession AttendanceSession[]
  groups          Group[]
  @@index([deletedAt])
}
enum AuditAction {
  CREATE
  UPDATE
  DELETE
  RESTORE
}
model GroupHistory {
  id        String      @id @default(cuid())
  groupId   String
  actorId   String
  action    AuditAction
  oldData   Json?
  newData   Json?
  timestamp DateTime    @default(now())

  group     Group @relation(fields: [groupId], references: [id])
  
  // ðŸ”¥ Relation name beramiz
  actor     User  @relation("GroupHistoryActor", fields: [actorId], references: [id])

  @@index([groupId])
  @@index([actorId])
}

model Group {
  id           String   @id @default(cuid())
  name         String
  monthlyFee   Int
  capacity     Int
  weekPattern  String
  roomId       String

  startTime    Int
  endTime      Int

  createdAt    DateTime @default(now())
  createdById  String?

  updatedAt    DateTime @updatedAt
  updatedById  String?
  attendanceSession AttendanceSession[]
  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?
  isActive     Boolean  @default(true)
  teachers     TeacherAssignment[]
  room         Room     @relation(fields: [roomId], references: [id])
   histories    GroupHistory[]
   enrollment Enrollment[]
  @@index([deletedAt])
}


model Enrollment {
  id String @id @default(cuid())

  studentId String
  groupId   String

  status EnrollmentStatus @default(ACTIVE)

  startedAt DateTime  @default(now())
  endedAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  student StudentProfile @relation(fields: [studentId], references: [id])
  group   Group          @relation(fields: [groupId], references: [id])

  deletedBy User? @relation(fields: [deletedById], references: [id])

  @@index([studentId])
  @@index([groupId])
  @@index([status])
  @@index([deletedAt])
  @@index([deletedById])
}

model AttendanceSession {
  id String @id @default(cuid())

  groupId String
  group   Group @relation(fields: [groupId], references: [id])

  teacherId String
  teacher   TeacherProfile @relation(fields: [teacherId], references: [id])

  roomId String
  room   Room @relation(fields: [roomId], references: [id])

  date DateTime

  startMin Int
  endMin   Int

  openAt  DateTime
  closeAt DateTime

  status     AttendanceSessionStatus @default(OPEN)
  lockedAt   DateTime?
  lockedById String?
  lockedBy   User? @relation("AttendanceSessionLockedBy", fields: [lockedById], references: [id])

  finalizedAt   DateTime?
  finalizedById String?
  finalizedBy   User? @relation("AttendanceSessionFinalizedBy", fields: [finalizedById], references: [id])

  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendance Attendance[]

  @@unique([groupId, date])
  @@index([teacherId, date])
  @@index([roomId, date])
  @@index([closeAt])
  @@index([lockedAt])
}

model Attendance {
  id String @id @default(cuid())

  sessionId String
  session   AttendanceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  studentId String
  student   StudentProfile @relation(fields: [studentId], references: [id])

  status  AttendanceStatus
  comment String? @db.VarChar(200)

  markedById String
  markedBy   User @relation("AttendanceMarkedBy", fields: [markedById], references: [id])

  markedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  source AttendanceSource @default(TEACHER)

  @@unique([sessionId, studentId])
  @@index([sessionId])
  @@index([studentId])
  @@index([markedById])
}