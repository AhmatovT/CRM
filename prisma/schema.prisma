generator client {
  provider = "prisma-client-js"
  // output QOLMASIN!
}


datasource db {
  provider = "postgresql"
}



enum Role {
  ADMIN
  MANAGER
  TEACHER
  STUDENT
}

enum UserStatus {
  ACTIVE
  BLOCKED
}
enum Gender {
  MALE
  FEMALE
}
enum TeacherPaymentType {
  SALARY
  PERCENT
}
enum EnrollmentStatus {
  ACTIVE
  DROPPED
  COMPLETED
}

model User {
  id String @id @default(cuid())
  phone String? @unique
  passwordHash String? 
  role Role
  status UserStatus  @default(ACTIVE)
  refreshToken RefreshToken[]
  mustChangePassword Boolean @default(false)
  tokenVersion Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teacherProfile TeacherProfile?
  studentProfile StudentProfile?
  managerProfile ManagerProfile?

  deletedTeacherProfiles TeacherProfile[] @relation("TeacherProfileDeletedBy")
  deletedStudentProfiles StudentProfile[] @relation("StudentProfileDeletedBy")
  deletedManagerProfiles ManagerProfile[] @relation("ManagerProfileDeletedBy")
  deletedEnrollments Enrollment[]

  deletedGroups Group[]
  @@index([role])
}

model RefreshToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([expiresAt])
  @@index([revokedAt])
}

model ManagerProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String
  gender    Gender?
  birthDate DateTime?
  photoUrl  String?

  salary    Int     // ðŸ”¥ YANGI

  note      String?
  isActive  Boolean @default(true)

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("ManagerProfileDeletedBy", fields: [deletedById], references: [id])
}


model StudentProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String
  address   String

  gender    Gender?
  birthDate DateTime?

  idCard    String?
  photoUrl  String?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("StudentProfileDeletedBy", fields: [deletedById], references: [id])

  enrollments Enrollment[]

  @@index([userId])
}


model TeacherProfile {
  id        String @id @default(cuid())
  userId    String @unique

  firstName String
  lastName  String

  gender    Gender?
  
  paymentType TeacherPaymentType

  monthlySalary Int?
  percent       Int?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  deletedBy User?  @relation("TeacherProfileDeletedBy", fields: [deletedById], references: [id])

  // âœ… QOâ€˜SH
  groups Group[]

  @@index([userId])
}

model Room {
  id        String   @id @default(cuid())
  name      String
  capacity  Int
  isActive  Boolean  @default(true)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // âœ… QOâ€˜SH
  groups Group[]

  @@index([deletedAt])
}


model Group {
  id        String @id @default(uuid())

  name      String
  price     Int
  capacity  Int

  teacherId String
  roomId    String

  teacher   TeacherProfile @relation(fields: [teacherId], references: [id])
  room      Room           @relation(fields: [roomId], references: [id])

  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deletedBy    User? @relation(fields: [deletedById], references: [id])
  deleteReason String?
     
  enrollments Enrollment[]

  @@index([teacherId])
  @@index([roomId])
  @@index([deletedAt])
  @@index([deletedById])
}




model Enrollment {
  id        String @id @default(cuid())

  studentId String
  groupId   String

  status    EnrollmentStatus @default(ACTIVE)

  startedAt DateTime @default(now())
  endedAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt    DateTime?
  deletedById  String?
  deleteReason String?

  student StudentProfile @relation(fields: [studentId], references: [id])
  group   Group          @relation(fields: [groupId], references: [id])

  deletedBy User? @relation(fields: [deletedById], references: [id])

  @@index([studentId])
  @@index([groupId])
  @@index([status])
  @@index([deletedAt])
  @@index([deletedById])
}